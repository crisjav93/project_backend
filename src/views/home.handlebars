<h1>Productos en la Base</h1>

<table class="table">
  <tr>
    <th><b>Nombre:</b></th>
    <th><b>Descripción:</b></th>
    <th><b>Precio:</b></th>
    <th><b>Codígo:</b></th>
    <th><b>Stock:</b></th>
    <th><b>Imagen:</b></th>
  </tr>
  {{#each products }}
  <tr>
    <td>{{this.title}}</td>
    <td>{{this.description}}</td>
    <td>${{this.price}}</td>
    <td>{{this.code}}</td>
    <td>{{this.stock}}</td>
    <td><img src="{{this.thumbnail}}"></td>
  </tr>
  {{/each}}
</table>